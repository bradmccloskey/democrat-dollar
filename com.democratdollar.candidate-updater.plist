<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.democratdollar.candidate-updater</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>-c</string>
        <string>cd /Users/claude/projects/apps/democrat-dollar/updater &amp;&amp; source .env &amp;&amp; node src/update-candidates.js 2>&amp;1 | tee -a logs/candidate-update-$(date +%Y%m%d-%H%M%S).log</string>
    </array>

    <key>StartCalendarInterval</key>
    <array>
        <!-- Run every Wednesday at 1:00 AM -->
        <dict>
            <key>Weekday</key>
            <integer>3</integer>
            <key>Hour</key>
            <integer>1</integer>
            <key>Minute</key>
            <integer>0</integer>
        </dict>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/Users/claude/.nvm/versions/node/v24.13.0/bin:/opt/homebrew/bin:/usr/bin:/bin</string>
    </dict>

    <key>StandardOutPath</key>
    <string>/Users/claude/projects/apps/democrat-dollar/updater/logs/candidate-launchd-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/claude/projects/apps/democrat-dollar/updater/logs/candidate-launchd-stderr.log</string>

    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
