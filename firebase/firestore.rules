rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Companies collection - read-only for app users, write via Admin SDK only
    match /companies/{companyId} {
      allow read: if true;
      allow write: if false;  // Only Admin SDK (server-side) can write
    }

    // Metadata collection - read-only for app users
    match /metadata/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
